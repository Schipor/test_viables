<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.viableapp.activities.MainActivity">


    <LinearLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ToolbarHeight"
        android:layout_alignParentTop="true"
        android:background="@color/KColorBlack"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/Margin10dp"
            android:rotation="180"
            android:src="@drawable/right_arrow"
            android:tint="@color/KColorWhite"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/KColorWhite" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_base_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_toolbar"
        android:background="@color/KColorWhite" />

</RelativeLayout>
